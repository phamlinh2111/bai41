<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_bg">

    <LinearLayout
        android:id="@+id/icon_center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:padding="10dp"
            android:background="@drawable/circle_background"
            android:src="@drawable/cart"
            android:clipToOutline="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cart"
            android:textColor="@android:color/white"
            android:textSize="16sp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/icon_ledtv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="32dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@id/icon_center"
        app:layout_constraintEnd_toStartOf="@id/icon_center">

        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:padding="10dp"
            android:background="@drawable/circle_background"
            android:clipToOutline="true"
            android:src="@drawable/ledtv" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Led Tv"
            android:textColor="@android:color/white"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/icon_furniture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintBottom_toTopOf="@id/icon_center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="70dp">

        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:padding="10dp"
            android:background="@drawable/circle_background"
            android:clipToOutline="true"
            android:src="@drawable/furniture" />

        <TextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="Furniture"
            android:textColor="@android:color/white"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/icon_hotel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginBottom="32dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@id/icon_center"
        app:layout_constraintStart_toEndOf="@id/icon_center">

        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:padding="10dp"
            android:background="@drawable/circle_background"
            android:clipToOutline="true"
            android:src="@drawable/hotel" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hotel"
            android:textColor="@android:color/white"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/icon_flight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="70dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="@id/icon_center"
        app:layout_constraintEnd_toStartOf="@id/icon_center"
        app:layout_constraintTop_toTopOf="@id/icon_center">

        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="@drawable/circle_background"
            android:padding="10dp"
            android:clipToOutline="true"
            android:src="@drawable/fight" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Flight"
            android:textColor="@android:color/white"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/icon_fashion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="70dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="@id/icon_center"
        app:layout_constraintStart_toEndOf="@id/icon_center"
        app:layout_constraintTop_toTopOf="@id/icon_center">

        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:padding="10dp"
            android:background="@drawable/circle_background"
            android:clipToOutline="true"
            android:src="@drawable/fashion" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fashion"
            android:textColor="@android:color/white"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/icon_beauty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintEnd_toStartOf="@id/icon_center"
        app:layout_constraintTop_toBottomOf="@id/icon_center">

        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:padding="10dp"
            android:background="@drawable/circle_background"
            android:clipToOutline="true"
            android:src="@drawable/beauty" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Beauty"
            android:textColor="@android:color/white"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/icon_mobile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/icon_center">

        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:padding="10dp"
            android:background="@drawable/circle_background"
            android:clipToOutline="true"
            android:src="@drawable/mobile" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mobile"
            android:textColor="@android:color/white"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/icon_offers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintStart_toEndOf="@id/icon_center"
        app:layout_constraintTop_toBottomOf="@id/icon_center">

        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:padding="10dp"
            android:background="@drawable/circle_background"
            android:clipToOutline="true"
            android:src="@drawable/offer" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Offers"
            android:textColor="@android:color/white"
            android:textSize="16sp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
